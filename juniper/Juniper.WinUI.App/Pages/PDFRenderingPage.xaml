<Page
    x:Class="Juniper.WinUI.App.Pages.PDFRenderingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Juniper.WinUI.App.Pages"
      xmlns:models="using:Juniper.Core.Models"
      xmlns:media="using:Microsoft.UI.Xaml.Media.Imaging"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="Container"
              Opacity="0" />
        <ListView x:Name="LVItems"
                  VerticalAlignment="Stretch"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate  x:Name="CustomPrintTemplate"
                               x:DataType="models:PDFRenderModel">
                    <Grid Margin="0,22,0,0"
                          Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                        <Image x:Name="Output"
                               Source="{x:Bind (media:BitmapImage)ImgSrc}"
                               Stretch="None" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
