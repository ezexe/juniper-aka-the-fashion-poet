                                            Command="{x:Bind ViewModel.OnCommand}"
                                            CommandParameter="CommandCreateInvoice" />
                            <MenuFlyoutItem Icon="TwoPage"
                                            Text="Multiple"
                                            ToolTipService.ToolTip="Will create 1 invoice for every store in the asn."
                                            Command="{x:Bind ViewModel.OnCommand}"
                                            CommandParameter="CommandCreateMultipleInvoice" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>-->

                <AppBarButton x:Name="AbbPackingList"
                              Label="Packing List"
                              Icon="List"
                              ToolTipService.ToolTip="Create Packing List For the Selected Shipments">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Icon="TwoPage"
                                            Text="Multiple Files"
                                            ToolTipService.ToolTip="Create packing list for selected shipments in sepertae files"
                                            Click="AbbPackingList_Click" />
                            <MenuFlyoutItem Icon="Document"
                                            Text="Single file"
                                            ToolTipService.ToolTip="Create packing list for selected shipments in one files"
                                            Click="AbbPackingListSingle_Click"/>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

                <AppBarButton x:Name="AbbLabels"
                              Label="Labels"
                              Icon="Print"
                              ToolTipService.ToolTip="Create Shipping Labels For Selected Shipments"
                              Click="AbbLabels_Click" />

                <AppBarButton Icon="Send"
                              Label="Send"
                              ToolTipService.ToolTip="Send selected documents"
                              IsEnabled="{x:Bind ViewModel.IsActionsEnabled,Mode=OneWay}">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Icon="Map"
                                            Text="Selected Shipments"
                                            ToolTipService.ToolTip="Send shipping documents(856) for selected shipments"
                                            Click="AsnMenuFlyoutItem_Click" />
                            <MenuFlyoutItem Icon="Document"
                                            Text="Selected Invoices"
                                            ToolTipService.ToolTip="Send invoice documents(810) for selected invoices"
                                            Click="InvMenuFlyoutItem_Click" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBar>

