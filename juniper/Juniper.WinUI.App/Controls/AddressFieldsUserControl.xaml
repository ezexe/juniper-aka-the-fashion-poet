<UserControl x:Class="Juniper.WinUI.App.Controls.AddressFieldsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Juniper.WinUI.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox Text="{x:Bind ViewModel.Name, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="Name" />
        <TextBox Text="{x:Bind ViewModel.Address, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="Address"
                 Grid.Column="1" />
        <TextBox Text="{x:Bind ViewModel.Address2, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="Address2"
                 Grid.Column="2" />
        <TextBox Text="{x:Bind ViewModel.City, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="City"
                 Grid.Column="3" />

        <TextBox Text="{x:Bind ViewModel.State, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="State"
                 Grid.Row="1" />
        <TextBox Text="{x:Bind ViewModel.Zip, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="Zip"
                 Grid.Row="1"
                 Grid.Column="1" />
        <TextBox Text="{x:Bind ViewModel.Country, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="Country"
                 Grid.Row="1"
                 Grid.Column="2" />
        <TextBox Text="{x:Bind ViewModel.PhoneNumber, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 Header="PhoneNumber"
                 Grid.Row="1"
                 Grid.Column="3" />
    </Grid>
</UserControl>
