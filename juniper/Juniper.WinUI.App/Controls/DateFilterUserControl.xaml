        <ComboBox PlaceholderText="  Select Date"
                  VerticalAlignment="Center"
                  Style="{StaticResource DefaultComboBoxStyle}"
                  Height="{StaticResource BaseLargeControlHeight}"
                  Width="{StaticResource BaseLargeControlWidth}"
                  Padding="{StaticResource ActionsPaddingSmall}"
                  Margin="{StaticResource ActionsPaddingSmall}"
                  CornerRadius="{StaticResource ControlCornerRadius}"
                  BorderThickness="{ThemeResource TextControlBorderThemeThickness}"
                  BorderBrush="{ThemeResource TextControlBorderBrush}"
                  SelectionChanged="ComboBox_SelectionChanged"
                  ItemsSource="{x:Bind ICanFilter.DocumentDates}"
                  SelectedValue="{x:Bind ICanFilter.SelectedDocumentDates,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource StringFormatConverter},   
                        ConverterParameter=' {0:ddd MM-dd-yyyy}'}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>


        <Button ToolTipService.ToolTip="Search by ASN date or Actual ship date"
                Grid.Column="1"
                VerticalAlignment="Center"
                BorderThickness="{ThemeResource TextControlBorderThemeThickness}"
                BorderBrush="{ThemeResource TextControlBorderBrush}"
                Height="{StaticResource BaseLargeControlHeight}"
                Margin="{StaticResource ActionsPaddingSmall}"
                Visibility="{x:Bind DateFilterPropertys.FilterBtnVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <Button.Content>
                <StackPanel Padding="{StaticResource ActionsPaddingSmall}">
                    <Viewbox Width="{StaticResource smallIconElementSize}"
                             Height="{StaticResource smallIconElementSize}">
                        <SymbolIcon Symbol="Find" />
                    </Viewbox>
                </StackPanel>
            </Button.Content>
            <Button.Flyout>
                <MenuFlyout Placement="Bottom">
                    <MenuFlyoutItem Text="ASN Date"
                                    x:Name="ASNDate"
                                    Click="MenuFlyoutItem_Click" />
                    <MenuFlyoutItem Text="Actual Ship Date"
                                    x:Name="ActualDate"
                                    Click="MenuFlyoutItem_Click" />
                </MenuFlyout>
            </Button.Flyout>
        </Button>
