<UserControl x:Name="thisUC"
             x:Class="Juniper.WinUI.App.Controls.AddableGridViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Juniper.WinUI.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<local:AddableButtonUserControl x:Name="addablebtn"
                                        OnCommand="{Binding OnCommand,UpdateSourceTrigger=PropertyChanged}"
                                        ActionButtonCommandParam="{x:Bind ActionButtonCommandParam}"
                                        ButtonVisibility="{Binding CanAddRemoveables,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource boolToVisibilityConverter}}" />-->
        <Button x:Name="ButtonRoot"
                Style="{StaticResource DateTimePickerFlyoutButtonStyle}"
                Command="{Binding OnCommand,UpdateSourceTrigger=PropertyChanged}"
                CommandParameter="{x:Bind ActionButtonCommandParam}"
                Visibility="{Binding CanAddRemoveables,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource boolToVisibilityConverter}}"
                Margin="{StaticResource ActionsPadding}"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
            <Button.Content>
                <SymbolIcon Symbol="Add" />
            </Button.Content>
        </Button>
        <GridView x:Name="gridView"
                  ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                  ItemContainerStyle="{StaticResource addableGVIStyle}"
                  SelectionMode="None"
                  Grid.Row="1">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid x:Name="MaxItemsWrapGrid"
                                   MaximumRowsOrColumns="100"
                                   Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
            <GridView.ItemTemplate>
                <DataTemplate >
                    <local:RemoveableItemUserControl RemoveClicked="RemoveableItemUserControl_RemoveClicked">
                        <local:RemoveableItemUserControl.ItemContent>
                            <ContentControl ContentTemplate="{Binding ElementName=thisUC, Path=ItemTemplate}" />
                        </local:RemoveableItemUserControl.ItemContent>
                    </local:RemoveableItemUserControl>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</UserControl>
