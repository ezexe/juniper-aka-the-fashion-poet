<UserControl x:Class="Juniper.WinUI.App.Controls.PageTitleHeaderUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Juniper.WinUI.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid BorderBrush="{ThemeResource SystemChromeHighColor}"
          Margin="{StaticResource ActionsPaddingUpDown}"
          BorderThickness="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <!--<Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>-->
        <TextBlock Style="{StaticResource TitleTextBlockStyle11}"
                   Text="{x:Bind HeaderText}" />

        <ContentPresenter  Grid.Row="1"
                           Grid.Column="1"
                           Padding="{StaticResource ActionsPaddingUp}"
                           Content="{x:Bind HeaderOptionsContent}" />

        <ContentPresenter Grid.Column="2"
                          Padding="{StaticResource ActionsPaddingUp}"
                          Content="{x:Bind HeaderContent}" />
        <!--<Grid BorderBrush="{ThemeResource SystemChromeHighColor}"
              BorderThickness="0,0,0,1"
              Padding="0,0,0,8" />-->
    </Grid>
</UserControl>
