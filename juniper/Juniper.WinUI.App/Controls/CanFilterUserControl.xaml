<UserControl x:Class="Juniper.WinUI.App.Controls.CanFilterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Juniper.WinUI.App.Controls"
             xmlns:interactionCore="using:Microsoft.Xaml.Interactions.Core"
             xmlns:interaction="using:Microsoft.Xaml.Interactivity"
             xmlns:dos="using:Juniper.WinUI.App.DependencyObjects"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:userControls="using:Juniper.WinUI.App.Controls"
             mc:Ignorable="d">
    <Grid VerticalAlignment="Center"
          Margin="{StaticResource ActionsPadding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"
                              x:Name="clmnasn" />
            <ColumnDefinition Width="*"
                              x:Name="clmnbol" />
            <ColumnDefinition Width="*"
                              x:Name="clmninv"/>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="AutoSuggestBox"
                   BasedOn="{StaticResource DefaultAutoSuggestBoxStyle}">
                <Setter Property="FontSize"
                        Value="14" />
                <Setter Property="Padding"
                        Value="{StaticResource ActionsPaddingSmall}" />
                <Setter Property="Margin"
                        Value="{StaticResource ActionsPaddingSmall}" />
                <!--<Setter Property="Margin"
                        Value="0,0,4,0" />-->
                <Setter Property="Height"
                        Value="{StaticResource BaseLargeControlHeight}" />
            </Style>
        </Grid.Resources>
        <interaction:Interaction.Behaviors>
            <interactionCore:DataTriggerBehavior Binding="{x:Bind ASNFilterVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 Value="Visible">
                <interactionCore:ChangePropertyAction TargetObject="{Binding ElementName=clmnasn}"
                                                      PropertyName="Width"
                                                      Value="*" />
            </interactionCore:DataTriggerBehavior>
            <interactionCore:DataTriggerBehavior  Binding="{x:Bind ASNFilterVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                  Value="Collapsed">
                <interactionCore:ChangePropertyAction TargetObject="{Binding ElementName=clmnasn}"
                                                      PropertyName="Width"
                                                      Value="Auto" />
            </interactionCore:DataTriggerBehavior>


            <interactionCore:DataTriggerBehavior Binding="{x:Bind BOLFilterVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 Value="Visible">
                <interactionCore:ChangePropertyAction TargetObject="{Binding ElementName=clmnbol}"
                                                      PropertyName="Width"
                                                      Value="*" />
            </interactionCore:DataTriggerBehavior>
            <interactionCore:DataTriggerBehavior  Binding="{x:Bind BOLFilterVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                  Value="Collapsed">
                <interactionCore:ChangePropertyAction TargetObject="{Binding ElementName=clmnbol}"
                                                      PropertyName="Width"
                                                      Value="Auto" />
            </interactionCore:DataTriggerBehavior>

            <interactionCore:DataTriggerBehavior Binding="{x:Bind INVFilterVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                 Value="Visible">
                <interactionCore:ChangePropertyAction TargetObject="{Binding ElementName=clmninv}"
                                                      PropertyName="Width"
                                                      Value="*" />
            </interactionCore:DataTriggerBehavior>
            <interactionCore:DataTriggerBehavior  Binding="{x:Bind INVFilterVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                  Value="Collapsed">
                <interactionCore:ChangePropertyAction TargetObject="{Binding ElementName=clmninv}"
                                                      PropertyName="Width"
                                                      Value="Auto" />
            </interactionCore:DataTriggerBehavior>
        </interaction:Interaction.Behaviors>
        <AutoSuggestBox x:Name="ASBpo"
                            QueryIcon="Find"
                            PlaceholderText="PO"
                            ToolTipService.ToolTip="Search by Purchase Order Id"
                            TextChanged="ASBall_TextChanged"
                            SuggestionChosen="ASBall_SuggestionChosen"
                            QuerySubmitted="ASBall_QuerySubmitted"
                            Grid.Column="0"/>

            <AutoSuggestBox x:Name="ASBasn"
                            QueryIcon="Find"
                            PlaceholderText="ASN"
                            ToolTipService.ToolTip="Search by ASN Id"
                            TextChanged="ASBall_TextChanged"
                            SuggestionChosen="ASBall_SuggestionChosen"
                            QuerySubmitted="ASBall_QuerySubmitted"
                            Visibility="{x:Bind ASNFilterVisibility, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" 
                            Grid.Column="1" />

            <AutoSuggestBox x:Name="ASBOL"
                            QueryIcon="Find"
                            PlaceholderText="BOL"
                            ToolTipService.ToolTip="Search by BOL"
                            TextChanged="ASBall_TextChanged"
                            SuggestionChosen="ASBall_SuggestionChosen"
                            QuerySubmitted="ASBall_QuerySubmitted"
                            Visibility="{x:Bind BOLFilterVisibility, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            Grid.Column="2" />

            <AutoSuggestBox x:Name="ASBinv"
                            QueryIcon="Find"
                            PlaceholderText="Invoice"
                            ToolTipService.ToolTip="Search by Invoice Id"
                            TextChanged="ASBall_TextChanged"
                            SuggestionChosen="ASBall_SuggestionChosen"
                            QuerySubmitted="ASBall_QuerySubmitted"
                            Visibility="{x:Bind INVFilterVisibility, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                            Grid.Column="3"/>

        <userControls:DateFilterUserControl  Grid.Column="4">
            <userControls:DateFilterUserControl.DateFilterPropertys>
                <dos:DateFilterDependancyObject ActionButtonCommandParam="CommandFilterByDate"
                                                FilterBtnVisibility="{x:Bind ASNFilterBtnVisibility,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
            </userControls:DateFilterUserControl.DateFilterPropertys>
        </userControls:DateFilterUserControl>

        <!--<CalendarDatePicker PlaceholderText="Select date"
                            Grid.Column="4"
                            MinDate=""/>-->
    </Grid>
</UserControl>
