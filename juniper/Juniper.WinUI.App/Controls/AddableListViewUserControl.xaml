<UserControl x:Name="thisUC"
    x:Class="Juniper.WinUI.App.Controls.AddableListViewUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Juniper.WinUI.App.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--<local:AddableButtonUserControl x:Name="addablebtn"
                                        OnCommand="{x:Bind OnCommand}"
                                        ActionButtonCommandParam="{x:Bind ActionButtonCommandParam}"
                                        ButtonVisibility="{Binding CanAddRemoveables,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource boolToVisibilityConverter}}" />-->
        <Grid HorizontalAlignment="Left"
              VerticalAlignment="Center"
              Margin="{StaticResource ActionsPaddingLeftRight}"
              Padding="{StaticResource ActionsPaddingSmallDown}">
            <Button x:Name="ButtonRoot"
                    Style="{StaticResource DateTimePickerFlyoutButtonStyle}"
                    Command="{Binding OnCommand,UpdateSourceTrigger=PropertyChanged}"
                    CommandParameter="{x:Bind ActionButtonCommandParam}"
                    Visibility="{Binding CanAddRemoveables,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource boolToVisibilityConverter}}"
                    Margin="{StaticResource ActionsPaddingLeftRight}">
                <Button.Content>
                    <SymbolIcon Symbol="Add" />
                </Button.Content>
            </Button>
        </Grid>

        <ListView x:Name="listView"
                  ItemsSource="{x:Bind ItemsSource, Mode=OneWay}"
                  SelectionMode="None"
                  Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:RemoveableItemUserControl Margin="{StaticResource ActionsPaddingDown}"
                                                     RemoveClicked="RemoveableItemUserControl_RemoveClicked">
                        <local:RemoveableItemUserControl.ItemContent>
                            <ContentControl ContentTemplate="{Binding ElementName=thisUC, Path=ItemTemplate}" />
                        </local:RemoveableItemUserControl.ItemContent>
                    </local:RemoveableItemUserControl>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
