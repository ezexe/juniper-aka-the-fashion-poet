<Application x:Class="Juniper.WinUI.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Juniper.WinUI.App"
             xmlns:userControls="using:Juniper.WinUI.App.Controls"
             xmlns:models="using:Juniper.Core.Models"
             xmlns:converters="using:Juniper.WinUI.App.Converters"
             xmlns:Windows_UI_Xaml_Controls_Primitives="using:Microsoft.UI.Xaml.Controls.Primitives"
             RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!--xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
                <muxc:XamlControlsResources  />-->
                <!-- Other merged dictionaries here -->
                <!--<local:ItemTemplates />-->
                <ResourceDictionary Source="ItemTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="HomePageBackgroundBrush"
                                     Color="Transparent" />
                    <SolidColorBrush x:Key="PageHeaderForegroundBrush"
                                     Color="Black" />
                    <SolidColorBrush x:Key="SearchBoxBorderBrush"
                                     Color="Transparent" />
                    <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground"
                                     Color="Transparent" />
                    <StaticResource x:Key="ControlExampleDisplayBrush"
                                    ResourceKey="SolidBackgroundFillColorBaseBrush" />
                    <Thickness x:Key="SearchBoxBorderThickness">0</Thickness>
                    <Thickness x:Key="ControlExampleDisplayBorderThickness">1</Thickness>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="HomePageBackgroundBrush"
                                     Color="Transparent" />
                    <SolidColorBrush x:Key="PageHeaderForegroundBrush"
                                     Color="White" />
                    <SolidColorBrush x:Key="SearchBoxBorderBrush"
                                     Color="Transparent" />
                    <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground"
                                     Color="Transparent" />
                    <StaticResource x:Key="ControlExampleDisplayBrush"
                                    ResourceKey="SolidBackgroundFillColorBaseBrush" />
                    <Thickness x:Key="SearchBoxBorderThickness">0</Thickness>
                    <Thickness x:Key="ControlExampleDisplayBorderThickness">0</Thickness>
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <SolidColorBrush x:Key="HomePageBackgroundBrush"
                                     Color="{ThemeResource SystemColorWindowColor}" />
                    <SolidColorBrush x:Key="PageHeaderForegroundBrush"
                                     Color="{ThemeResource SystemColorWindowTextColor}" />
                    <SolidColorBrush x:Key="SearchBoxBorderBrush"
                                     Color="{ThemeResource SystemColorWindowTextColor}" />
                    <SolidColorBrush x:Key="ControlExampleDisplayBrush"
                                     Color="{ThemeResource SystemColorWindowColor}" />
                    <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground"
                                     Color="Transparent" />
                    <Thickness x:Key="SearchBoxBorderThickness">2</Thickness>
                    <Thickness x:Key="ControlExampleDisplayBorderThickness">1</Thickness>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            
            <!-- converters  -->
            <converters:NullToVisibilityConverter x:Key="nullToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="inverseNullToVisibilityConverter"
                                              NonNullValue="Collapsed"
                                              NullValue="Visible" />
            <converters:PropertyNamesConverter x:Key="PropNamesConverter" />
            <converters:StringEmptyToTextConverter x:Key="stringEmptyToTextConverter" />
            <converters:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />
            <converters:InverseBoolConverter x:Key="inverseBoolConverter" />
            <converters:ListEmptyToVisibilityVonverter x:Key="listEmptyToVisibilityVonverter" />
            <converters:StyleCodeToDescriptionConverter x:Key="StyleCodeToDescriptionConverter" />
            <converters:StringFormatConverter x:Key="StringFormatConverter" />
            <converters:StringFormatToParamConverter x:Key="StringFormatToParamConverter" />
            <converters:DocumentStatusToEnabledConverter x:Key="DocumentStatusToEnabledConverter" />
            <converters:PdfFilepathToImageConverter x:Key="PdfFilepathToImageConverter" />
            <converters:NullToPlaceholderTextConverter x:Key="NullToPlaceholderTextConverter" />

            <Windows_UI_Xaml_Controls_Primitives:JumpListItemBackgroundConverter x:Key="JumpListItemBackgroundConverter" />
            <Windows_UI_Xaml_Controls_Primitives:JumpListItemForegroundConverter x:Key="JumpListItemForegroundConverter" />

            
            
            <!--resource colors-->
            <SolidColorBrush x:Key="WindowCaptionBackground">Transparent</SolidColorBrush>
            <SolidColorBrush x:Key="WindowCaptionBackgroundDisabled">Transparent</SolidColorBrush>
            
            
            
            <!-- L-Pattern Overwriting resources -->
            <Thickness x:Key="PageHeaderDefaultPadding">0</Thickness>
            <Thickness x:Key="PageHeaderMinimalPadding">-4,0,12,0</Thickness>

            <Thickness x:Key="NavigationViewContentMargin">0,38,0,0</Thickness>
            <Thickness x:Key="NavigationViewContentGridBorderThickness">1,1,0,0</Thickness>
            <CornerRadius x:Key="NavigationViewContentGridCornerRadius">8,0,0,0</CornerRadius>
            <Thickness x:Key="NavigationViewHeaderMargin">28, 28, 0, 0</Thickness>
            <x:Double x:Key="NavigationViewTopPaneHeight">30</x:Double>
            <x:Double x:Key="NavigationViewCompactPaneLength">40</x:Double>
            <StaticResource x:Key="NavigationViewItemForegroundSelected" ResourceKey="SystemControlForegroundAccentBrush" />
            
            <x:Double x:Key="TeachingTipMinHeight">40</x:Double>
            <x:Double x:Key="TeachingTipMaxHeight">520</x:Double>
            <x:Double x:Key="TeachingTipMinWidth">420</x:Double>
            <x:Double x:Key="TeachingTipMaxWidth">420</x:Double>



            <!-- Sizes -->
            <x:Double x:Key="Breakpoint640Minus">0</x:Double>
            <x:Double x:Key="Breakpoint640Plus">641</x:Double>
            <x:Double x:Key="Breakpoint1008Plus">1008</x:Double>

            <x:Double x:Key="DPIScaleFactor">24</x:Double>
            
            <x:Double x:Key="SquareButtonIconSmall">16</x:Double>
            <x:Double x:Key="SquareButtonIconMedium">20</x:Double>
          
            <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
            <CornerRadius x:Key="ControlCornerRadiusLarge">8</CornerRadius>
            <Thickness x:Key="ControlBorderThickness">1</Thickness>

            <x:Double x:Key="BasePageUserControlWidth">1076</x:Double>

            <x:Double x:Key="smallIconElementSize">12</x:Double>
            <x:Double x:Key="ListIconElementSize">32</x:Double>
            <x:Double x:Key="BaseLargeControlHeight">32</x:Double>
            <x:Double x:Key="BaseLargeControlWidth">160</x:Double>
            <x:Double x:Key="MediumLargeControlHeight">40</x:Double>
            <x:Double x:Key="LargeLargeControlHeight">44</x:Double>

            <Thickness x:Key="ControlElementScreenshotModePadding">67</Thickness>

            <Thickness x:Key="PageDefaultPadding">24,0</Thickness>
            <Thickness x:Key="PageDefaultPaddingLarge">56,0,56,0</Thickness>

            <x:Double x:Key="MultipleOf4SquareSmall">4</x:Double>
            <x:Double x:Key="MultipleOf4SquareMedium">40</x:Double>
            <x:Double x:Key="MultipleOf4SquareLarge">64</x:Double>
            <x:Double x:Key="MultipleOf4SquareXLarge">128</x:Double>
            <x:Double x:Key="MultipleOf4SquareXXLarge">156</x:Double>
            <x:Double x:Key="MultipleOf4SquareXXXLarge">212</x:Double>
            <x:Double x:Key="MultipleOf4Circle">200</x:Double>
            <x:Double x:Key="MultipleOf4RectBase">200</x:Double>
            <x:Double x:Key="MultipleOf4RectBaseSmall">228</x:Double>
            <x:Double x:Key="MultipleOf4RectBaseMedium">256</x:Double>
            <x:Double x:Key="MultipleOf4RectBaseLarge">312</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthXXSmall">120</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthXSmall">140</x:Double>
            <x:Double x:Key="MultipleOf4RectWidth">240</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthSmall">260</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthMedium">280</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthXMedium">300</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthXXMedium">340</x:Double>
            <x:Double x:Key="MultipleOf4RectWidthXLarge">420</x:Double>
            <x:Double x:Key="MultipleOf4RectHeightXXSmall">104</x:Double>
            <x:Double x:Key="MultipleOf4RectMediumHeight">340</x:Double>
            <x:Double x:Key="MultipleOf4RectHeight">360</x:Double>
            
            <Thickness x:Key="ActionsPaddingSmall">4</Thickness>
            <Thickness x:Key="ActionsPaddingSmallLeft">4,0,0,0</Thickness>
            <Thickness x:Key="ActionsPaddingSmallUp">0,4,0,0</Thickness>
            <Thickness x:Key="ActionsPaddingSmallRight">0,0,4,0</Thickness>
            <Thickness x:Key="ActionsPaddingSmallDown">0,0,0,4</Thickness>
            <Thickness x:Key="ActionsPaddingSmallLeftRight">4,0</Thickness>
            <Thickness x:Key="ActionsPaddingSmallUpDown">0,4</Thickness>

            <Thickness x:Key="ActionsPadding">8</Thickness>
            <Thickness x:Key="ActionsPaddingLeft">8,0,0,0</Thickness>
            <Thickness x:Key="ActionsPaddingUp">0,8,0,0</Thickness>
            <Thickness x:Key="ActionsPaddingRight">0,0,8,0</Thickness>
            <Thickness x:Key="ActionsPaddingDown">0,0,0,8</Thickness>
            <Thickness x:Key="ActionsPaddingLeftRight">8,0</Thickness>
            <Thickness x:Key="ActionsPaddingUpDown">0,8</Thickness>

            <Thickness x:Key="ActionsMediumPadding">12</Thickness>
            <Thickness x:Key="ActionsMediumPaddingLeft">12,0,0,0</Thickness>
            <Thickness x:Key="ActionsMediumPaddingUp">0,12,0,0</Thickness>
            <Thickness x:Key="ActionsMediumPaddingRight">0,0,12,0</Thickness>
            <Thickness x:Key="ActionsMediumPaddingDown">0,0,0,12</Thickness>
            <Thickness x:Key="ActionsMediumPaddingLeftRight">12,0</Thickness>
            <Thickness x:Key="ActionsMediumPaddingUpDown">0,12</Thickness>

            <Thickness x:Key="ActionsLargePadding">16</Thickness>
            <Thickness x:Key="ActionsLargePaddingLeft">16,0,0,0</Thickness>
            <Thickness x:Key="ActionsLargePaddingUp">0,16,0,0</Thickness>
            <Thickness x:Key="ActionsLargePaddingRight">0,0,16,0</Thickness>
            <Thickness x:Key="ActionsLargePaddingDown">0,0,0,16</Thickness>
            <Thickness x:Key="ActionsLargePaddingLeftRight">16,0</Thickness>
            <Thickness x:Key="ActionsLargePaddingUpDown">0,16</Thickness>

            <Thickness x:Key="ActionsXLargePadding">20</Thickness>
            <Thickness x:Key="ActionsXLargePaddingLeft">20,0,0,0</Thickness>
            <Thickness x:Key="ActionsXLargePaddingUp">0,20,0,0</Thickness>
            <Thickness x:Key="ActionsXLargePaddingRight">0,0,20,0</Thickness>
            <Thickness x:Key="ActionsXLargePaddingDown">0,0,0,20</Thickness>
            <Thickness x:Key="ActionsXLargePaddingLeftRight">20,0</Thickness>
            <Thickness x:Key="ActionsXLargePaddingUpDown">0,20</Thickness>

            <Thickness x:Key="ActionsXXLargePadding">24</Thickness>
            <Thickness x:Key="ActionsXXLargePaddingLeft">24,0,0,0</Thickness>
            <Thickness x:Key="ActionsXXLargePaddingUp">0,24,0,0</Thickness>
            <Thickness x:Key="ActionsXXLargePaddingRight">0,0,24,0</Thickness>
            <Thickness x:Key="ActionsXXLargePaddingDown">0,0,0,24</Thickness>
            <Thickness x:Key="ActionsXXLargePaddingLeftRight">24,0</Thickness>
            <Thickness x:Key="ActionsXXLargePaddingUpDown">0,24</Thickness>


            <!--Style-->
            <Style TargetType="userControls:TitledFieldsUserControl">
                <Setter Property="Margin"
                        Value="{StaticResource ActionsXXLargePaddingDown}" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
            </Style>

            <Style x:Key="TitleTextBlockStyle11"
                   TargetType="TextBlock"
                   BasedOn="{StaticResource BaseTextBlockStyle}">
                <Setter Property="FontWeight"
                        Value="SemiBold" />
                <Setter Property="LineHeight"
                        Value="36" />
                <Setter Property="FontSize"
                        Value="28" />
                <Setter Property="Padding"
                        Value="{StaticResource ActionsMediumPaddingUp}" />
                <Setter Property="OpticalMarginAlignment"
                        Value="None" />
            </Style>
            
            <Style TargetType="CommandBar"
                   BasedOn="{StaticResource CommandBarRevealStyle}">
                <Setter Property="DefaultLabelPosition"
                        Value="Right" />
                <Setter Property="HorizontalAlignment"
                        Value="Stretch" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Background"
                        Value="Transparent" />
            </Style>
            <Style TargetType="AppBarButton">
                <Setter Property="Margin"
                        Value="0,0,0,0" />
                <Setter Property="LabelPosition"
                        Value="Default" />
                <Setter Property="AllowFocusOnInteraction"
                        Value="True" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Center" />
            </Style>

            
            <Style TargetType="GridViewItem"
                   x:Key="addableGVIStyle">
                <Setter Property="HorizontalContentAlignment"
                        Value="Stretch" />
                <Setter Property="VerticalContentAlignment"
                        Value="Stretch" />
                <Setter Property="Margin"
                        Value="{StaticResource ActionsPaddingSmall}" />
                <Setter Property="BorderBrush"
                        Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="Background"
                        Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
                <Setter Property="BorderThickness"
                        Value="1" />
                <Setter Property="CornerRadius"
                        Value="{StaticResource ControlCornerRadius}" />
            </Style>
            <Style TargetType="GridViewItem"
                   x:Key="NewDefaultGridviewItemStyle"
                   BasedOn="{StaticResource DefaultGridViewItemStyle}">
                <Setter Property="Margin"
                        Value="{StaticResource ActionsPaddingSmall}" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="VerticalAlignment"
                        Value="Top" />
                <Setter Property="VerticalContentAlignment"
                        Value="Top" />
                <Setter Property="BorderBrush"
                        Value="{ThemeResource CardStrokeColorDefaultBrush}" />
                <Setter Property="Background"
                        Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
                <Setter Property="BorderThickness"
                        Value="{StaticResource ControlBorderThickness}" />
                <Setter Property="CornerRadius"
                        Value="{StaticResource ControlCornerRadius}" />
            </Style>
            <Style TargetType="GridViewItem"
                   x:Key="InvisGridViewItemStyle"
                   BasedOn="{StaticResource DefaultGridViewItemStyle}">
                <Setter Property="Margin"
                        Value="8" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="BorderBrush"
                        Value="Transparent" />
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="BorderThickness"
                        Value="0" />
            </Style>
            <Style TargetType="GridViewItem"
                   BasedOn="{StaticResource NewDefaultGridviewItemStyle}">
            </Style>

            <Style TargetType="NumberBox"
                   x:Key="NewDefaultNumberBoxStyle">
                <Setter Property="SmallChange"
                        Value="1" />
                <Setter Property="LargeChange"
                        Value="1" />
                <Setter Property="SpinButtonPlacementMode"
                        Value="Compact" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="Margin"
                        Value="{StaticResource ActionsPaddingSmall}" />
            </Style>
            <Style TargetType="NumberBox"
                   BasedOn="{StaticResource NewDefaultNumberBoxStyle}">
            </Style>

            <Style TargetType="ComboBox"
                   x:Key="NewDefaultComboBoxStyle"
                   BasedOn="{StaticResource DefaultComboBoxStyle}">
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="SelectedValuePath"
                        Value="Item1" />
                <Setter Property="Margin"
                        Value="{StaticResource ActionsPadding}" />
            </Style>
            <Style TargetType="ComboBox"
                   BasedOn="{StaticResource NewDefaultComboBoxStyle}">
            </Style>
            
            <Style TargetType="TextBox"
                   x:Key="NewDefaultTextBoxStyle"
                   BasedOn="{StaticResource DefaultTextBoxStyle}">
                <Setter Property="Width"
                        Value="200" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Margin"
                        Value="{StaticResource ActionsPaddingSmall}" />
            </Style>
            <Style TargetType="TextBox"
                   BasedOn="{StaticResource NewDefaultTextBoxStyle}">
            </Style>



            <!--DataTemplate-->
            <DataTemplate x:Key="GroupInfoListHeaderTemplate">
                <Border>
                    <TextBlock Text="{Binding Key}"
                               FontSize="20"
                               Style="{ThemeResource TitleTextBlockStyle}" />
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GroupInfoListHeaderTemplatekK1">
                <Border>
                    <TextBlock Text="{Binding Key1}"
                               FontSize="20"
                               Style="{ThemeResource TitleTextBlockStyle}" />
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GroupInfoListHeaderTemplatekK2">
                <Border>
                    <TextBlock Text="{Binding Key2}"
                               FontSize="20"
                               Style="{ThemeResource TitleTextBlockStyle}" />
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GroupInfoListHeaderTemplatekK3">
                <Border>
                    <TextBlock Text="{Binding Key3}"
                               FontSize="20"
                               Style="{ThemeResource TitleTextBlockStyle}" />
                </Border>
            </DataTemplate>

            <ItemsPanelTemplate x:Key="GroupInfoListItemsPanelTemplate">
                <ItemsStackPanel AreStickyGroupHeadersEnabled="True" />
            </ItemsPanelTemplate>
            <ItemsPanelTemplate x:Key="ZoomedInItemsPanelTemplateWide">
                <ItemsWrapGrid Orientation="Horizontal"
                               GroupPadding="0,0,0,20" />
            </ItemsPanelTemplate>

            <Style x:Key="GroupHeaderContainerStyle"
                   TargetType="ListViewHeaderItem">
                <Setter Property="HorizontalContentAlignment"
                        Value="Stretch" />
            </Style>
            <Style x:Key="ZoomedOutContainerStyle"
                   TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment"
                        Value="Stretch" />
            </Style>

            <DataTemplate x:Key="GroupHeaderTemplateWide">
                <Border>
                    <TextBlock Style="{StaticResource SubheaderTextBlockStyle}"
                               Text="{Binding Name}" />
                </Border>
            </DataTemplate>
            <DataTemplate x:Key="GroupHeaderTemplate">
                <Border Margin="0,0,0,6.9"
                        Height="38"
                        Background="{StaticResource SystemControlBackgroundAccentBrush}">
                    <TextBlock Text="{Binding Name}"
                               Margin="9.6,0,0,4.8"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Foreground="White"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold" />
                </Border>
            </DataTemplate>

            <DataTemplate x:Key="ZoomedOutTemplateWide">
                <Grid HorizontalAlignment="Left"
                      Width="250"
                      Height="250">
                    <Border Background="{StaticResource ListViewItemPlaceholderBackgroundThemeBrush}" />
                    <StackPanel VerticalAlignment="Bottom"
                                Background="{StaticResource ListViewItemOverlayBackgroundThemeBrush}">
                        <TextBlock Foreground="{StaticResource ListViewItemOverlayForegroundThemeBrush}"
                                   Style="{StaticResource SubtitleTextBlockStyle}"
                                   Height="80"
                                   Margin="15,0"
                                   Text="{Binding Group.Name}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ZoomedOutTemplate">
                <Border Margin="9.6,0.8"
                        Background="{Binding Converter={StaticResource JumpListItemBackgroundConverter}}">
                    <TextBlock Margin="9.6,0,9.6,4.8"
                               Text="{Binding Group.Name}"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               Foreground="{Binding Converter={StaticResource JumpListItemForegroundConverter}}"
                               VerticalAlignment="Bottom"
                               FontWeight="SemiBold" />
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
